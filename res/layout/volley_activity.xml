<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:id="@+id/btn_volley_image"
                    android:text="获取图像方法"
                    style="@style/BaseButton"/>
            <Button
                    android:id="@+id/btn_volley_enclose"
                    android:layout_toRightOf="@id/btn_volley_image"
                    android:layout_alignBaseline="@id/btn_volley_image"
                    android:text="二次封装"
                    style="@style/BaseButton"/>
            <Button
                    android:id="@+id/btn_volley_get_string"
                    android:layout_below="@id/btn_volley_image"
                    android:text="Get String"
                    style="@style/BaseButton"/>
            <Button
                    android:id="@+id/btn_volley_get_json"
                    android:layout_toRightOf="@id/btn_volley_get_string"
                    android:layout_alignBaseline="@id/btn_volley_get_string"
                    android:text="Get Json"
                    style="@style/BaseButton"/>
            <Button
                    android:id="@+id/btn_volley_post_string"
                    android:layout_below="@id/btn_volley_get_string"
                    android:text="POST String"
                    style="@style/BaseButton"/>
            <Button
                    android:id="@+id/btn_volley_post_json"
                    android:layout_toRightOf="@id/btn_volley_post_string"
                    android:layout_alignBaseline="@id/btn_volley_post_string"
                    style="@style/BaseButton"
                    android:text="POST Json"/>
            <TextView
                    android:id="@+id/tv_volley"
                    android:layout_below="@id/btn_volley_post_string"
                    style="@style/BaseTextView"/>
            <ImageView
                    android:id="@+id/iv_volley"
                    android:layout_below="@id/tv_volley"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
            <FrameLayout
                    android:id="@+id/fl_volley"
                    android:layout_below="@id/iv_volley"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>