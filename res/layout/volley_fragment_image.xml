<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <Button
            android:id="@+id/btn_volley_get_image"
            style="@style/BaseButton"
            android:text="获取图片"/>
    <Button
            android:id="@+id/btn_volley_get_image_loader"
            style="@style/BaseButton"
            android:text="获取并且缓存图片"/>
    <Button
            android:id="@+id/btn_volley_get_image_network"
            style="@style/BaseButton"
            android:text="使用NetworkImageView获取图片"/>
    <Button
            android:id="@+id/btn_volley_get_image_network2"
            style="@style/BaseButton"
            android:text="使用MyNetworkImageView获取图片"/>
    <TextView
            android:id="@+id/tv_volley_fragment_image"
            style="@style/BaseTextView"/>
    <ImageView
            android:id="@+id/iv_volley_fragment_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/niv_volley_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    <com.bruce.study.demo.studydata.volley_demo.widget.MyNetWorkImageView
            android:id="@+id/niv_volley_fragment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
</LinearLayout>