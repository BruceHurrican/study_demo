<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">
        <Button
                android:id="@+id/btn_utildemo_build_factory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="获取手机设备信息"/>
        <Button
                android:id="@+id/btn_utildemo_package_permission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:ellipsize="marquee"
                android:text="获取手机每个应用包名和权限名称信息"/>
        <Button
                android:id="@+id/btn_utildemo_share_apps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="获取手机内所有支持分享的应用"/>

        <Button
                android:id="@+id/btn_utildemo_non_system_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="获取手机内非系统应用"/>
        <Button
                android:id="@+id/btn_utildemo_root_permission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="手机是否已经root"/>
        <Button
                android:id="@+id/btn_utildemo_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="获取屏幕的宽高(像素)密度"/>
        <Button
                android:id="@+id/btn_utildemo_network"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="当前设备是否联网"/>
        <Button
                android:id="@+id/btn_utildemo_browser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="调用系统浏览器打开百度"/>
        <Button
                android:id="@+id/btn_utildemo_sdcardinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:ellipsize="marquee"
                android:text="获取手机内部存储空间和外部存储空间"/>
        <TextView
                android:id="@+id/tv_utildemo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>