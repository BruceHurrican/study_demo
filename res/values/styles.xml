<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 用于消除app启动时出现白屏的情景 -->
    <style name="Theme.Start" parent="android:Theme.Holo">
        <item name="android:background">#575757</item>
    </style>
    <!-- used in PopupWindowActivity.java -->
    <style name="itheimaPopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/itheima_popup_window_enter</item>
        <item name="android:windowExitAnimation">@anim/itheima_popup_window_out</item>
    </style>
    <!-- 基类Button样式 -->
    <style name="BaseButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">onClick</item>
    </style>
    <!-- 基类TextView -->
    <style name="BaseTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- activity 跳转动画 -->
    <style name="ActivityChangeStyle" parent="android:Theme.Holo">
        <!-- activity 创建时进入效果 -->
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <!-- activity 未 finish 时退出效果 -->
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <!-- activity 上一个 activity 返回进入效果 -->
        <item name="android:activityCloseEnterAnimation">@android:anim/slide_in_left</item>
        <!-- activity finish 时退出效果 -->
        <item name="android:activityCloseExitAnimation">@android:anim/slide_out_right</item>
    </style>
</resources>