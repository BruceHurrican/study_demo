<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
            android:id="@+id/tv_gh_bt_help"
            tools:text="test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is the help screen\n
           Click client for bluetooth client code or Server for the server code.\n
           Below is a list of paired devices.  If the other device is not listed, then you must pair the device before you can use this example code.\n"
            android:textAppearance="?android:textAppearanceMedium"/>
    <TextView
            android:id="@+id/tv_gh_bt_logger1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceLargePopupMenu"
            tools:text="testtest"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">
        <Button
                android:id="@+id/btn_gh_bt1"
                style="@style/BaseButton"
                android:layout_weight="1"
                android:text="Server"/>
        <Button
                android:id="@+id/btn_gh_bt2"
                style="@style/BaseButton"
                android:layout_weight="1"
                android:text="Client"/>
    </LinearLayout>
</LinearLayout>