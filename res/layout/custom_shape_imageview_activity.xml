<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="16dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal">
        <com.bruce.study.demo.github.custom_shape_imageview_demo.widget.CustomShapeImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/parallax_header"
                app:shape="rectangle"
                android:scaleType="centerCrop"/>
        <com.bruce.study.demo.github.custom_shape_imageview_demo.widget.CircleImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/parallax_header"
                android:scaleType="centerCrop"/>
        <com.bruce.study.demo.github.custom_shape_imageview_demo.widget.RectangleImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/parallax_header"
                android:scaleType="centerCrop"/>
        <com.bruce.study.demo.github.custom_shape_imageview_demo.widget.SvgImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/parallax_header"
                app:svg_raw_resource="@raw/csiv_demo_shape_star"
                android:scaleType="centerCrop"/>
    </LinearLayout>
    <GridView
            android:id="@+id/gv_csiv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:verticalSpacing="16dp"
            android:stretchMode="columnWidth"
            android:numColumns="2"/>

</LinearLayout>