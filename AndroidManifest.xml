<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.bruce.study.demo"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk
            android:minSdkVersion="14"
            android:targetSdkVersion="21"/>
    <!-- 获取联网权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 获取写入SDcard 权限 -->
    <uses-permission android:name="ANDROID.PERMISSION.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="ANDROID.PERMISSION.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <!-- 横竖屏切换 权限 -->
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION"/>
    <application
            android:name=".DemoApplication"
            android:allowBackup="true"
            android:label="@string/app_name"
            android:icon="@drawable/icon_workdemo">
        <activity
                android:name=".MainActivity"
                android:launchMode="singleTop"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".util_demo.PhoneInfoActivity"
                android:launchMode="singleTask"/>
        <activity
                android:name="com.bruce.study.demo.swipe_refresh_layout_demo.SwipeRefreshLayoutActivity"
                android:launchMode="singleTask"/>
        <activity
                android:name=".shape_loading_demo.ShapeLoadingActivity"
                android:launchMode="singleTask"/>
        <activity
                android:name=".parallax_listview_demo.ParallaxActivity"
                android:launchMode="singleTask"/>
        <!-- 学习资料小demo -->
        <activity
                android:name=".studydata.itheima_lihuoming.popup_window.PopupWindowActivity"
                android:launchMode="singleTask"/>
        <activity
                android:name=".studydata.activity_life_style.LifeStyleActivity"
                android:launchMode="singleTask"/>
        <activity
                android:name=".studydata.activity_life_style.LifeStyleOtherActivity"
                android:theme="@android:style/Theme.Dialog"
                android:launchMode="singleTask"/>
        <activity
                android:name=".studydata.button_project.ButtonProject"
                android:launchMode="singleTask"/>
        <activity
                android:name=".studydata.imagebutton_project.ImageButtonActivity"
                android:launchMode="singleTask"/>
        <activity
                android:name=".studydata.edittext_project.EditTextActivity"
                android:launchMode="singleTask"/>
        <activity
                android:name=".studydata.checkbox_project.CheckBoxActivity"
                android:launchMode="singleTask"/>
        <activity
                android:name=".studydata.radiobutton_project.RadioButtonActivity"
                android:launchMode="singleTask"/>
        <activity
                android:name=".studydata.progressbar_project.ProgressBarActivity"
                android:launchMode="singleTask"/>
        <activity
                android:name=".studydata.seekbar_project.SeekBarActivity"
                android:launchMode="singleTask"/>
        <activity
                android:name=".studydata.tab_project.TabActivity"
                android:launchMode="singleTask"/>
        <activity
                android:name=".studydata.baseadapter_project.BaseAdapterActivity"
                android:launchMode="singleTask"/>
        <activity
                android:name=".studydata.dialog_project.DialogActivity"
                android:launchMode="singleTask"/>
        <activity
                android:name=".studydata.switch_screen_project.SwitchScreenActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:launchMode="singleTask"/>
        <activity
                android:name=".studydata.game_view_framework_project.GameViewActivity"
                android:launchMode="singleTask"/>
        <activity
                android:name=".studydata.surfaceview_project.SurfaceViewActivity"
                android:launchMode="singleTask"/>
        <activity
                android:name=".studydata.bezier_project.BezierActivity"
                android:launchMode="singleTask"/>
    </application>
</manifest>
