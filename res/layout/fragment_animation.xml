<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="#a0ff"
                android:layout_height="match_parent">
    <HorizontalScrollView
            android:id="@+id/hsv_title_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                    android:id="@+id/btn_fade_in"
                    style="@style/BaseButton"
                    android:layout_margin="10dp"
                    android:text="渐入"/>
            <Button
                    android:id="@+id/btn_fade_out"
                    style="@style/BaseButton"
                    android:layout_margin="10dp"
                    android:text="渐出"/>
            <Button
                    android:id="@+id/btn_slide_in"
                    android:layout_margin="10dp"
                    style="@style/BaseButton"
                    android:text="滑入"/>
            <Button
                    android:id="@+id/btn_slide_out"
                    android:layout_margin="10dp"
                    style="@style/BaseButton"
                    android:text="滑出"/>
        </LinearLayout>
    </HorizontalScrollView>
    <ImageView
            android:id="@+id/iv_show_animation"
            android:layout_below="@id/hsv_title_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_margin="20dp"
            android:src="@drawable/parallax_header"/>
</RelativeLayout>